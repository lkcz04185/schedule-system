<div class="container">

  <script>
  $( function() {
      from = $( "#from" )
        .datepicker({
          defaultDate: "+1w",
          dateFormat: 'yy-mm-dd',
          changeMonth: true,
          numberOfMonths: 3
        })
        .on( "change", function(event) {
          to.datepicker( "option", "minDate", getDate(this));
        })

      to = $( "#to" ).datepicker({
        defaultDate: "+1w",
        dateFormat: 'yy-mm-dd',
        changeMonth: true,
        numberOfMonths: 3
      })
      .on( "change", function() {
        from.datepicker( "option", "maxDate", getDate( this ) );
      });
 
    function getDate( element ) {
      var date;
      try {
        date = $.datepicker.parseDate( dateFormat, element.value );
      } catch( error ) {
        date = null;
      }
      return date
      }
  } );
  </script>



  <%= form_tag stats_path, method: :get do %>
  <label for="from">From</label>
  <input type="text" id="from" name="from">
  <label for="to">to</label>
  <input type="text" id="to" name="to">
  <%= submit_tag 'Search', class: 'btn' %>
  <% end %>
 
 </div>

<br />
<br />

  <div class="stat-panel">
    <div class="panel panel-primary">
      <!-- Default panel contents -->
      <div class="panel-heading">
      <b>Enrollments</b>
      </div>   


      <!-- Table -->    
      <table class="table">
        <thead>  
          <tr>
            <th>Name</th>
            <% @enrollments.each do |date, enrollment| %>
            <th> <%= date.strftime("%e.%_m.") %> </th>
             <% end %>
            <th>Total</th>            
          </tr>
        </thead>
        
        <tbody>
       
      <% @enrolled_members.each do |id, total_enrollments| %>
        <% @users.each do |user| %>
        <tr>
          <% if user.id == id %>
            <td> <%= user.name %> <%= user.surname %> </td>
              <% @enrollments_total.each do |date, enrollment| %>
                <% if date[0] == user.id %>
                  <td> <%= enrollment.count %> </td>
                <% end %>
              <% end %>
              <td> <%= total_enrollments.count %> </td>
          <% end %>
        </tr>
        <% end %>
      <% end %>

       

          
        </tbody>         
       
      </table>
    </div>
  </div>

